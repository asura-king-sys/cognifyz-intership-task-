<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advanced Task 3 Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <nav class="navbar navbar-dark bg-dark mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">Cognifyz Portal</a>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-5 d-none d-md-block">
                <div class="p-4">
                    <h2>Welcome Back!</h2>
                    <p class="text-muted">Please fill out the form to register your membership. We use secure server-side validation to protect your data.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">✔️ Instant validation</li>
                        <li class="list-group-item">✔️ Secure data handling</li>
                        <li class="list-group-item">✔️ Responsive interface</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card shadow-sm">
                    <div class="card-body p-5">
                        <h3 class="card-title mb-4">Register User</h3>

                        <% if (locals.error) { %>
                            <div class="alert alert-danger error-message">
                                <strong>Error:</strong> <%= error %>
                            </div>
                        <% } %>

                        <form action="/submit-form" method="POST" onsubmit="return validateForm()">
                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="username" name="userName" placeholder="John Doe">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Age</label>
                                <input type="number" class="form-control" id="userAge" name="userAge">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Membership Type</label>
                                <select class="form-select" name="membership" id="membership">
                                    <option value="">Choose...</option>
                                    <option value="free">Free</option>
                                    <option value="premium">Premium</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-custom">Submit Registration</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function validateForm() {
            const name = document.getElementById('username').value;
            const age = document.getElementById('userAge').value;
            const membership = document.getElementById('membership').value;

            if (name.length < 3) {
                alert("Name must be at least 3 characters.");
                return false;
            }
            if (age <= 0 || age > 120) {
                alert("Please enter a valid age.");
                return false;
            }
            if (membership === "") {
                alert("Please select a membership.");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>